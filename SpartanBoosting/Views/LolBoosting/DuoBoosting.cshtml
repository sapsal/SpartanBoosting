								<div class="">
									<label class="pb-3" for="desired-rank">YOUR DESIRED LEAGUE:<span class="gfield_required">*</span></label>
									<select name="DesiredCurrentLeague" asp-for="DesiredCurrentLeague" id="desired-rank" class="form-control gfield-quote" aria-required="true" aria-invalid="false" required="">
										<option value="Iron">Iron</option>
										<option value="Bronze">Bronze</option>
										<option value="Silver">Silver</option>
										<option value="Gold">Gold</option>
										<option value="Platinum">Platinum</option>
										<option value="Diamond">Diamond</option>
										<option value="Master">Master</option>
									</select>
									<label id="master-rank-notification" style="display:none" for="desired-rank" class="gfield note gfield_html gfield_html_formatted gfield_no_follows_desc field_sublabel_below field_description_below gfield_visibility_visible font-weight-normal">For divisions higher than Master please contact us!</label>
								</div>
							</div>
							<div class="pb-4">
								<div class="">
									<select name="DesiredCurrentDivision" asp-for="DesiredCurrentDivision" id="desired-div" class="form-control gfield-quote" aria-required="true" aria-invalid="false">
										<option value="IV">Division IV</option>
										<option value="III">Division III</option>
										<option value="II">Division II</option>
										<option value="I">Division I</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-md-3"><img id="desired-rank-logo" style="height: 12rem;" src='~/img/Lol Ranks/IronIV.png' /></div>
					</div>
					<div class="nk-gap-2"></div>
					<div class="row pb-4">
						<div class="col-md-6 pr-3">
							<div class=" ">
								<label class="pb-3 " for="your-server">YOUR SERVER:<span class="gfield_required">*</span></label>
								<select name="Server" asp-for="Server" id="your-server" class="form-control  gfield-quote" aria-required="true" aria-invalid="false" required="">
									<option value="Europe West">Europe West</option>
									<option value="Europe Nordic &amp; East">Europe Nordic &amp; East</option>
									<option value="North America">North America</option>
									<option value="Oceania">Oceania</option>
									<option value="Russia">Russia</option>
									<option value="Turkey">Turkey</option>
									<option value="Latin America North">Latin America North</option>
									<option value="Latin America South">Latin America South</option>
									<option value="Brazil">Brazil</option>
									<option value="Japan">Japan</option>
									<option value="Korea">Korea</option>
								</select>
							</div>
						</div>
						<div class="col-md-6">
							<div class=" ">
								<label class="pb-3 gfield_label" for="queue-type">
									TYPE OF QUEUE:<span class="gfield_required">*</span>
								</label>
								<select name="TypeOfQueue" asp-for="TypeOfQueue" id="queue-type" class="form-control  gfield-quote" aria-required="true" aria-invalid="false" required="">
